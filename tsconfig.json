{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
       // "esModuleInterop": true,
       // "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["es2015"],
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "test"
    ]
}
